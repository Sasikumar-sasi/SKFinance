@model IEnumerable<VehicleLoan.Models.Loan>

@{
    ViewBag.Title = "ViewLoans";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h2>ViewLoans</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Customers.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VehicleBrand)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Model)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OnRoadPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Customers.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleBrand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OnRoadPrice)
            </td>

            @if (item.Status.Equals("Accepted"))
            {
        <td style="color:forestgreen"><b>
    @Html.DisplayFor(modelItem => item.Status)
</b>
        </td>
            }
            else if (item.Status.Equals("Declined"))
            {
                <td style="color:red"><b>
    @Html.DisplayFor(modelItem => item.Status)
</b>
                </td>
            }
            else
            {
        <td style="color:orange"><b>
    @Html.DisplayFor(modelItem => item.Status)
</b>
        </td>
            }

            <td>
                @Html.ActionLink("Change", "DetailsLoan", new { id = item.LoanID }) |
                @Html.ActionLink("Delete", "DeleteLoan", new { id = item.LoanID })
            </td>
        </tr>
    }

</table>

<button>@Html.ActionLink("Home", "DashBoard", "Admin")</button>
