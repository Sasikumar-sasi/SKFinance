<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

    <title>@ViewBag.Title - My ASP.NET Application</title>


</head>
<body style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;">

    <nav class="navbar navbar-expand-sm navbar-dark" style="background-color:palevioletred">
        <div class="container-fluid ">
            <a class="navbar-brand" href="javascript:void(0)">SK FINANCE</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mynavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="mynavbar">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        @Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link text-light" })
                    </li>
                </ul>
                <div style="margin-right:2%">@Html.ActionLink("Register", "Create", "Customers", null, new { @class = "d-flex btn btn-default bg-warning btn-sm text-white" })</div>
                <div style="margin-right:2%">@Html.ActionLink("Login", "Login", "Customers", null, new { @class = "d-flex btn btn-default bg-success btn-sm text-white" })</div>
                <div style="margin-right:2%">@Html.ActionLink("Admin", "Login", "Admin", null, new { @class = "d-flex btn btn-default bg-success btn-sm text-white" })</div>


            </div>
        </div>
    </nav>


    <div class="container body-content">
        @RenderBody()

        <footer style="position:fixed;bottom:0px;color:coral;width:100%">
            <hr />
            <p>&copy; @DateTime.Now.Year - SASI CODES</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
